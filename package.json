{
    "publisher": "baincd",
    "name": "maven-log-lang",
    "displayName": "Maven Log File Enhancer",
    "description": "Add folding ranges and colors to Maven log files",
    "version": "0.0.1",
    "repository": {
        "url": "https://github.com/baincd/vscode-maven-log-lang"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": [
            {
                "properties": {
                    "maven-log-lang.filePatterns": {
                        "type": "array",
                        "description": "Glob patterns that match the absolute path of documents to apply this extension to.  NOTE: Requires restart for changes to take effect",
                        "items": {
                            "type": "string"
                        },
                        "default": [
                            "**/mvn*.log",
                            "**/maven*.log"
                        ]
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.23.0",
        "@typescript-eslint/eslint-plugin": "^4.16.0",
        "@typescript-eslint/parser": "^4.16.0",
        "eslint": "^7.21.0",
        "typescript": "^4.2.2"
    }
}
